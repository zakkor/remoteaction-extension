{
	"name": "RemoteAction",
	"description": "Send custom actions to your remote servers.",
	"version": "1.0",
	"permissions": [
		"contextMenus",
		"webRequest",
		"storage",
		"notifications",
		"http://*/",
		"https://*/"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "remoteaction-1.0"
		}
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"ext.js"
		]
	},
	"icons": {
		"32": "icon32.png"
	},
	"manifest_version": 2
}
